<Window x:Class="FinalUi.PaymentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PaymentDetailsWindow" Height="300" Width="824">
    <Window.Resources>
        <CollectionViewSource x:Key="ClientList" CollectionViewType="ListCollectionView"></CollectionViewSource>
        <CollectionViewSource x:Key="PaymentDetailsSourceGrid" CollectionViewType="ListCollectionView"></CollectionViewSource>
        <CollectionViewSource x:Key="InvoiceDetailsSourceGrid" CollectionViewType="ListCollectionView"></CollectionViewSource>
    </Window.Resources>
    <ContentControl>
        <StackPanel Margin="10,0,-10,0">
            <WrapPanel>
                <TextBlock Text="Select Client: ">
                </TextBlock>
                <ComboBox  DataContext="{StaticResource ClientList}" IsTextSearchEnabled="True" ItemsSource="{Binding}" Name="ClientComboBox" Width="300">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <WrapPanel>
                                <TextBlock Text="{Binding Path=CLNAME}"></TextBlock>
                                <TextBlock Text=" : "></TextBlock>
                                <TextBlock Text="{Binding Path=CLCODE}"></TextBlock>

                            </WrapPanel>
                        </DataTemplate>

                    </ComboBox.ItemTemplate>
                </ComboBox>
            </WrapPanel>
            <WrapPanel>
                <TextBlock Text="From Date: "></TextBlock>
                <DatePicker Name="FromDatepicker"></DatePicker>
                <TextBlock Text="To Date: "></TextBlock>
                <DatePicker Name="ToDatePicker"></DatePicker>
                <Button Content="Fetch Records" Name="FetchButton" Click="FetchButton_Click"></Button>
            </WrapPanel>
            <WrapPanel>
                <DataGrid Name="InvoiceDatagrid" DockPanel.Dock="Left" AutoGenerateColumns="False" DataContext="{StaticResource InvoiceDetailsSourceGrid}" ItemsSource="{Binding}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="BillNumber" Binding="{Binding BillDisplayNumber}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                        <DataGridTextColumn Header="Basic" Binding="{Binding Basic}"/>
                        <DataGridTextColumn Header="Fuel" Binding="{Binding Fuel}"/>
                        <DataGridTextColumn Header="STax" Binding="{Binding STax}"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount}"/>
                        <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}"/>

                    </DataGrid.Columns>
                </DataGrid>
                <Button Name="FetchInvoiceButton" Content="Show Selected invoice" Click="FetchInvoiceButton_Click"></Button>
            </WrapPanel>
            <WrapPanel>
            <DataGrid DockPanel.Dock="Right" AutoGenerateColumns="False" DataContext="{StaticResource PaymentDetailsSourceGrid}" ItemsSource="{Binding}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="PayementNo." Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding Date}"/>
                        <DataGridTextColumn Header="Amount" Binding="{Binding RecievedAmount}"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding Type}"/>
                        <DataGridTextColumn Header="ChequeNumber" Binding="{Binding ChequeNumber}"/>
                        <DataGridTextColumn Header="Remarks" Binding="{Binding Remarks}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Name="ViewRecieptButton" Content="View Selected Payment Reciepted"></Button>
            </WrapPanel>
        </StackPanel>
    </ContentControl>
</Window>
