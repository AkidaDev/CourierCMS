<Window x:Class="FinalUi.PreferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PreferenceWindow" Height="500" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <TreeView Grid.Column="0" Grid.Row="0">
            
        </TreeView>
        <StackPanel Grid.Column="1" Grid.Row="0">
            <WrapPanel>
            <TextBlock Text="Service Tax"/>
            <TextBox  Name="serviceTaxBox" Width="20" Height="25"></TextBox>
            </WrapPanel>
        </StackPanel>
        <Button Name="DefaultButton" Content="Default" Click="DefaultButton_Click" HorizontalAlignment="Right"  Grid.Column="1" Grid.Row="1" Margin="0,5,30,-5"/>
        <Button Name="SaveButton" Content="Save" Click="SaveButton_Click" Width="70" Height="50" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="1"  Margin="0,10,111,0"></Button>
    </Grid>
</Window>
