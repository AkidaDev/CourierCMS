<Window x:Class="FinalUi.PreferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Height="78.358" Width="440.299" ResizeMode="NoResize"  WindowStartupLocation="CenterScreen" Background="SlateGray" WindowState="Normal"  >
    <Grid >
        <StackPanel Grid.Column="1" Grid.Row="0" Background="#FFF9F9F9" Height="139" Margin="5,0,10,0" VerticalAlignment="Top" >

            <WrapPanel >
                <TextBlock Text="Connection String"/>
                <TextBox Name="ConnectionStringBox"  Width="302" Height="23"/>
            </WrapPanel>
            <WrapPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
                <Button Content="Save" Click="SaveButton_Click" Width="47"/>
                <Button Content="Reset" Click="DefaultButton_Click"/>
            </WrapPanel>
        </StackPanel>

    </Grid>
</Window>