<Window x:Class="FinalUi.ClientReport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:rv="clr-namespace:Microsoft.Reporting.WinForms;assembly=Microsoft.ReportViewer.WinForms"
        Title="ClientReport" Height="800" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="ClientList" CollectionViewType="ListCollectionView" />
    </Window.Resources>
    <Grid Name="abe">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0">
            <TextBlock Text="Client: "></TextBlock>
            <ComboBox Name="ClientListCombo"  IsEditable="True" MinWidth="50" SelectionChanged="ClientListCombo_SelectionChanged" ItemsSource="{Binding}" DataContext="{StaticResource ClientList}" DisplayMemberPath="CLCODE"></ComboBox>
            <Button HorizontalAlignment="Right" Content="Print" Click="PrintButton_Click" Margin=" 5 5 5 5"/>
        </WrapPanel>
        <WindowsFormsHost Grid.Row="1">
            <rv:ReportViewer x:Name="AccountStatementViewer" ShowContextMenu="True" ShowExportButton="True" ></rv:ReportViewer>
        </WindowsFormsHost>
    </Grid>
</Window>
