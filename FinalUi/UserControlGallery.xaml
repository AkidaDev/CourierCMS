<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="FinalUi.UserControlGallery"
	x:Name="Window"
	Title="UserControlGallery"
	Width="640" Height="480">

	<Grid x:Name="LayoutRoot">
        <Grid.Resources>
            <Style x:Key="sheetButton" TargetType="Button">
                <Setter Property="Background" Value="AliceBlue"></Setter>
            </Style>
        </Grid.Resources>
        <Button Content="Button" HorizontalAlignment="Left" Margin="75,42,0,0" VerticalAlignment="Top" Width="75" Style="{StaticResource sheetButton}"></Button>
        <Button Content="Button" HorizontalAlignment="Left" Margin="102,128,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>