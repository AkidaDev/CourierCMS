<Window x:Class="FinalUi.AddRole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="addRole" SizeToContent="Height" Width="300" >
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <WrapPanel>
                <Label Content="Role Name" HorizontalAlignment="Left"  VerticalAlignment="Top"/>
                <TextBox  Name="RoleName" MinWidth="150" />
            </WrapPanel>
            <StackPanel Name="PermissionPanel" >
                <Label Content="Permisstions" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            </StackPanel>
            <Button Content="Add Role" HorizontalAlignment="Left" Height="26"  VerticalAlignment="Top" Width="145" Click="Button_Click_1" />
        </StackPanel>
    </Grid>
</Window>
