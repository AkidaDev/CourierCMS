<Window x:Class="FinalUi.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="340" Width="640" Background="Transparent"
        WindowStyle="None"  BorderBrush="Transparent" AllowsTransparency="True" Padding="20">

    <Grid  Height="300" Width="600" MouseLeftButtonDown="Grid_MouseLeftButtonDown_1" >
        <Grid.Effect>
            <DropShadowEffect Color="#FFF5621E" RenderingBias="Quality" Direction="0" ShadowDepth="0"/>
        </Grid.Effect>
        <Grid.Background>
            <ImageBrush ImageSource="Images/vortex.png"/>
        </Grid.Background>
        <StackPanel>
            <WrapPanel HorizontalAlignment="Right">
                <Button x:Name="CloseButton"  Width="30" MouseEnter="CloseButton_MouseEnter_1" MouseLeave="CloseButton_MouseLeave_1" MouseLeftButtonUp="CloseButton_MouseLeftButtonUp_1" Content="X" FontSize="15"  FontStyle="Italic" Foreground="White" BorderBrush="Transparent">
                    <Button.Style>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Background" Value="Black"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Border Background="{TemplateBinding Background}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </WrapPanel>
            <!--<Label Content="Enter username and pass for the sql server" Foreground="White"/>-->
            
        </StackPanel>
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin=" 5 5 5 5">
                <Separator Visibility="Hidden"></Separator>
                <WrapPanel>
                    <Label Content="Instance Name" Foreground="White" MinWidth="150"/>
                    <TextBox Text="SQLEXPRESS" x:Name="InstanceName" MinWidth="150" Padding="5 5 5 5" />
                </WrapPanel>
                <Separator Visibility="Hidden"></Separator>
                <WrapPanel HorizontalAlignment="Right" >
                    <Label Content="Enter User Name:  " MinWidth="150" Foreground="White"></Label>
                    <TextBox MinWidth="150" Padding="5 5 5 5" Name="UserName"></TextBox>
                </WrapPanel>
                <Separator Visibility="Hidden"></Separator>
                <WrapPanel HorizontalAlignment="Right" >
                    <Label Content="Enter Password: " MinWidth="150" HorizontalAlignment="Center" Foreground="White"></Label>
                    <PasswordBox MinWidth="150" Name="Password" Padding="5 5 5 5"></PasswordBox>
                </WrapPanel>
                <Separator Visibility="Hidden"></Separator>
                <WrapPanel  HorizontalAlignment="Right" Margin="5 0 0 10">
                    <Button Content="Login" Width="100" Name="LoginButton" Click="LoginButton_Click"></Button>
                    <Button Content="Setup Data" x:Name="SetupButton" Click="SetupButton_Click_1" Margin="10 0 0 0" Width="107"/>
                </WrapPanel>
                <Separator Visibility="Hidden"></Separator>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
