<Window x:Class="FinalUi.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="477.778"
        WindowStyle="SingleBorderWindow"
        >

    <Grid>
        <Grid.Effect>
            <DropShadowEffect BlurRadius="40" Color="#FF46C3E8" Direction="70" RenderingBias="Quality" ShadowDepth="0"/>
        </Grid.Effect>
        <StackPanel>
            <Label Content="Enter username and pass for the sql server"></Label>
            <Button Content="Setup Data" Name="SetupButton" Click="SetupButton_Click_1"></Button>
            <WrapPanel>
                <Label Content="Instance Name"></Label>
                <TextBox Text="SQLEXPRESS" Name="InstanceName"></TextBox>
            </WrapPanel>
        </StackPanel>
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Bottom">
                <Separator Visibility="Hidden"></Separator>
                <WrapPanel HorizontalAlignment="Center">
                    <Label Content="Enter User Name:  " MinWidth="150"></Label>
                    <TextBox MinWidth="150" Padding="5 5 5 5" Name="UserName"></TextBox>
                </WrapPanel>
                <Separator Visibility="Hidden"></Separator>
                <WrapPanel HorizontalAlignment="Center">
                    <Label Content="Enter Password: " MinWidth="150" HorizontalAlignment="Center"></Label>
                    <PasswordBox MinWidth="150" Name="Password" Padding="5 5 5 5"></PasswordBox>
                </WrapPanel>
                <Separator Visibility="Hidden"></Separator>
                <WrapPanel  HorizontalAlignment="Center">
                    <Button Content="Login" Width="100" Name="LoginButton" Click="LoginButton_Click"></Button>
                </WrapPanel>
                <Separator Visibility="Hidden"></Separator>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
